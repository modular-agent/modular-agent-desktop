{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MAK Desktop",
  "version": "0.11.0",
  "identifier": "jp.lumilab.mak-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "MAK Desktop",
        "width": 1600,
        "height": 900,
        "dragDropEnabled": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "msi",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
